{
	"parserOptions": {
		"ecmaVersion": 2023, 
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"node": true
	},
	"extends": ["eslint:recommended"],
	"rules": {
		"no-unused-vars": "warn",
		"no-console": "off",
		"eqeqeq": "error",
		"curly": ["error", "all"],
		"indent": ["error", 2],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-debugger": "error",
		"arrow-parens": ["error", "always"],
		"comma-dangle": ["error", "never"]
	  }
}
